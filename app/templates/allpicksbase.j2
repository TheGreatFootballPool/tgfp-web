{% set login_status_class='subhead' %}
{% macro week_no_link(week_info) %}
    {% if week_info == display_week_info %}
        &nbsp;<span style="font-size:12pt">{{ week_info.week_no }}&nbsp;</span>
    {% else %}
        <!--suppress HtmlUnknownTarget -->
        <a style="font-size:12pt" href="/allpicks?season={{ week_info.season }}&season_type={{ week_info.season_type }}&week_no={{ week_info.week_no }}">&nbsp;{{ week_info.week_no }}&nbsp;</a>
    {% endif %}
    {% if index != week_info.week_no %}
    {% endif %}
{% endmacro %}

<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>The Great Football Pool - {{ page_title }}</title>
    <link rel=stylesheet type=text/css href="{{ url_for('static', path='mainstyle.css') }}">
    <script src="https://use.fontawesome.com/8c439a9d4e.js"></script>
</head>
  <body>
    <div id="topBar"></div>
    <div id="headerBar">
        <div class="title">The Great Football Pool</div>
        <div class="description">{{ page_description }}</div>
        {% set ns = namespace(week_info_name="") %}
        {% set ns = namespace(end_div_tag_needed=False) %}
        {% for week_info in all_week_infos %}
            {% if week_info.season_type_name != ns.week_info_name %}
                {% if ns.end_div_tag_needed %}
                    {% set ns.end_div_tag_needed = False %}
                    </div>
                {% endif %}
                {% set ns.end_div_tag_needed = True %}
                {% set ns.week_info_name = week_info.season_type_name %}
                <div class="description_sub week_no_link">{{ ns.week_info_name }}
            {% endif %}
            {{ week_no_link(week_info) }}
        {% endfor %}
        </div>
    </div>
    <div id="mainContent">
        {% set found_picks = player.picks_for_week(week_info=display_week_info) %}
        {% if not found_picks %}
            <h1>You must enter your <a href="{{ url_for('picks') }}">picks</a> before seeing this page</h1>
         {% else %}
            {% block content %} {% endblock %}
        {% endif %}
    </div>
    <div>
        <ul>
            <li><span class="lock">lock</span> - <span class="upset">upset</span> - <span class="lockupset">lock and upset</span></li>
            <li><a href="{{ url_for('home') }}">Go Back to Home Page</a></li>
        </ul>
    </div>
    <script>
        function autoRefresh() {
            window.location = window.location;
        }
        setInterval('autoRefresh()', 30000);
    </script>
  </body>
</html>